{
    "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "target": "esnext",
    "lib": ["esnext", "esnext.asynciterable"],
    "module": "commonjs",
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "incremental": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "types": ["@wdio/sync", "@wdio/cucumber-framework", "node"]
  },
  "include": [
    "./**/*.ts", "wdio.conf.js"
  ],
  "compileOnSave": false
}
